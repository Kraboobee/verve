---
interface Props {
  title: string;
  desc: string;
  href: string;
}

const { href, title, desc } = Astro.props;
---

<li class="py-6 space-y-2 flex flex-col">
  <h2 class="">{title}</h2>
  <p class="font-light text-slate-300">{desc}</p>
  <a href={`/blog/${href}`}>
    Read More
    <svg
      width="6"
      height="10"
      viewBox="0 0 6 10"
      fill="none"
      class="inline-block ml-2"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M1 9L5 5L1 1"
        stroke="#FDFDFC"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </a>
</li>
